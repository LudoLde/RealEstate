{% extends 'base.html.twig' %}

{% block title %}Real Estate 92 - Accueil{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center flex-wrap column-gap-5">
{% for realEstate in realEstates %}
<div class="card mt-5 w-25">
    <h3 class="card-header">ID: {{ realEstate.id}}</h3>
      {% if not realEstate.name %}
    <div class="hidden"></div>
      {% else %}
    <div class="card-body">
      <h5 class="card-title">{{ realEstate.name}}</h5>
    </div>
{% endif %}
    <img src="{{ vich_uploader_asset (realEstate, 'imageFile') }}">
    <div class="card-body">
        <p class="card-text">{{ realEstate.description }}</p>
    </div>
    <div class="card-body">
        <p class="card-text">Price: {{ realEstate.price }} $</p>
    </div>
    <div class="card-footer text-muted">
       {{ realEstate.createdAt | date("m/Y") }}
    </div>
</div>
{% endfor %}
</div>
{% endblock %}
